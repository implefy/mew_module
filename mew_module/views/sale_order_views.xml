<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale Order Form View - Add payment info -->
    <record id="view_order_form_inherit_partial_payment" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.partial.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add amount remaining after payment term -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="amount_remaining" widget="monetary"/>
            </xpath>

            <!-- Add stat button for transactions -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_transactions"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-credit-card"
                        invisible="not transaction_ids">
                    <field name="transaction_ids" invisible="1"/>
                    <div class="o_stat_info">
                        <span class="o_stat_value">
                            <field name="amount_paid" widget="monetary"/>
                        </span>
                        <span class="o_stat_text">Paid</span>
                    </div>
                </button>
            </xpath>

            <!-- Add Register Payment button -->
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="action_register_payment"
                        type="object"
                        string="Register Payment"
                        class="btn-secondary"
                        invisible="amount_remaining &lt;= 0 or state == 'cancel'"/>
            </xpath>
        </field>
    </record>

    <!-- Sale Order Tree View - Add payment columns -->
    <record id="view_order_tree_inherit_partial_payment" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.partial.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="amount_paid" optional="show" widget="monetary"/>
                <field name="amount_remaining" optional="show" widget="monetary"/>
            </xpath>
        </field>
    </record>

    <!-- Also add to sale order tree (confirmed orders) -->
    <record id="view_sale_order_tree_inherit_partial_payment" model="ir.ui.view">
        <field name="name">sale.order.tree.sale.inherit.partial.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="amount_paid" optional="show" widget="monetary"/>
                <field name="amount_remaining" optional="show" widget="monetary"/>
            </xpath>
        </field>
    </record>

</odoo>
